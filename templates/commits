<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graphique des Commits</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h1>Graphique des Commits par Minute</h1>
    <canvas id="commitChart" width="800" height="400"></canvas>

    <script>
        const labels = {{ labels | tojson }};
        const values = {{ values | tojson }};

        const ctx = document.getElementById('commitChart').getContext('2d');
        const commitChart = new Chart(ctx, {
            type: 'bar', // Type de graphique
            data: {
                labels: labels, // Minutes sur l'axe X
                datasets: [{
                    label: 'Nombre de commits',
                    data: values, // Nombre de commits sur l'axe Y
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
